<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:scaleY="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/ivTeacher_Iamge"
            android:src="@drawable/app_icon"
            android:layout_width="80dp"
            android:layout_height="110dp"/>

        <LinearLayout
            android:id="@+id/ll_useraBatchlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teacher Name : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_TeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvJobTitle"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Mathematics,"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvQualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualification : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Qualification_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="48dp"
                    android:layout_toRightOf="@+id/tvQualification"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Graduation,"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact No. : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/iv_delete"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/delete_icon" />

                <TextView
                    android:id="@+id/tv_tvContactNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="48dp"
                    android:layout_toRightOf="@+id/tvContactNo"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Mathematics,"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email. : "
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="48dp"
                    android:layout_toRightOf="@+id/tvEmail"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Mathematics,"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView

                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Status :-"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/sp_Statuspending"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/tvStatus"
                    android:maxLines="1"
                    android:text="Pending "
                    android:textColor="@color/dark_grey"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_Edit"
                    android:layout_width="25dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/edit_icon"
                    android:visibility="gone"
                    app:tint="@color/colorAccent" />


            </RelativeLayout>


        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>