<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#E6E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgt.NeWay.activity.UploadOtherCertificate.UploadOtherCertificate">

    <include android:id="@+id/head" layout="@layout/toolbar_with_back"/>

    <RelativeLayout
        android:layout_below="@+id/head"
        android:layout_margin="20dp"
        android:id="@+id/rl_Uploadcertificate"
        android:background="@drawable/batchlist_background"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_Addbatches"
            android:src="@drawable/certificates"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_Addbatches"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="Upload Certificate "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <TextView
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:id="@+id/certificate"
        android:layout_below="@+id/rl_Uploadcertificate"
        android:text="Certificate List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/rv_UploadCertificate"
         android:layout_margin="10dp"
         android:layout_below="@+id/certificate"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     </androidx.recyclerview.widget.RecyclerView>
    <ProgressBar

        android:id="@+id/Pb_Progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:visibility="gone" />
</RelativeLayout>