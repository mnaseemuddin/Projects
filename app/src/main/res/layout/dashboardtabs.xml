<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_Dashboard"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="5dp"
    android:background="@drawable/dashboardbox">


    <RelativeLayout
        android:id="@+id/ll_dashBoardCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_countoflistitem"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:textAllCaps="true"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_countoflistitem"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/iv_dash_listimage"
            android:singleLine="true"
            android:text="List"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_dash_listimage"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:padding="2dp"

            android:src="@drawable/list_icon" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp"
                android:backgroundTint="@color/colorAccent"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="More Info"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_more"
                    android:id="@+id/iv_dashmore"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/iconsmore" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>






</RelativeLayout>
