<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgt.NeWay.activity.Registration">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_back_signup"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_back_white"
                        app:tint="@color/black" />

                </androidx.appcompat.widget.Toolbar>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/app_icon" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Coaching Center Name"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_CoachingCenterName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint="Enter Coaching Center Name"
                        android:inputType="textWebEmailAddress"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Mobile Number"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_mobileno_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Password"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter Password"
                        android:inputType="textVisiblePassword"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Email"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_email_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Email Id "
                       android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>


                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_owner_name_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter Name"
                        android:inputType="textCapWords"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Select Adress"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/signup_background">

                        <TextView
                            android:ellipsize="end"
                            android:textSize="14dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/iv_pointer"
                            android:id="@+id/tv_Address_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:hint=" Select Full Address"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:padding="5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/light_grey" />


                        <ImageView

                            android:id="@+id/iv_pointer"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/icon_map"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </RelativeLayout>


                    <EditText
                        android:textSize="14sp"
                        android:id="@+id/et_Blockname_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter City Name"
                        android:inputType="textCapWords"
                        android:maxLength="70"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:autofillHints="">

                    </EditText>

                    <EditText
                        android:textSize="14dp"
                        android:id="@+id/et_Pincode_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter Pincode"
                        android:inputType="number"
                        android:maxLength="70"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey">

                    </EditText>

                    <EditText
                        android:textSize="14dp"
                        android:id="@+id/et_Statename_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/signup_background"
                        android:hint=" Enter State Name"
                        android:inputType="textWebEmailAddress"
                        android:maxLength="70"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Select Course"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:padding="3dp"
                        android:background="@drawable/signup_background"
                        android:orientation="horizontal"
                        android:id="@+id/ll_radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rb_onlyclasses"
                                android:buttonTint="@color/colorAccent"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:text="Only Classes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/OnlyCourese"
                                android:buttonTint="@color/colorAccent"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:text="Only Courese"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>
                        <LinearLayout

                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rbBoth"
                                android:buttonTint="@color/colorAccent"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:text="Both"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/signup_cheakbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:buttonTint="@color/colorAccent"
                            android:gravity="center_vertical"
                            android:text="I agree with "
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_TNC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:gravity="center_vertical"
                            android:text="@string/terms_amp_conditions"
                            android:textColor="@color/colorAccent"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="@color/colorAccent"
                        android:visibility="gone"></ProgressBar>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <Button
                            android:id="@+id/btn_signup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/batchlist_background"
                            android:text="Sign up"
                            android:textColor="@color/white">

                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>