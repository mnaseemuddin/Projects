<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgt.NeWay.activity.JobList.Jobs">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_with_back"/>

        <RelativeLayout
            android:id="@+id/rl_AddJobContainer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:background="@drawable/batchlist_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/tv_Addbatches"
                android:src="@drawable/list_icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_Addbatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:text="Add Job"
                android:textColor="@color/white" />


        </RelativeLayout>

        <TextView
          android:layout_marginLeft="15dp"
            android:textColor="@color/colorAccent"
            android:text="Job List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="3dp"
            android:id="@+id/rv_JobList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:indeterminateTint="@color/colorAccent"
        android:layout_centerInParent="true"
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>