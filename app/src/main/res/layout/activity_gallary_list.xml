<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lgt.NeWay.activity.Gallary.GallaryList">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_with_back"/>

        <RelativeLayout
             android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/rl_AddIamgeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_uploadimage"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ad_image" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvUploadImage"
                android:layout_margin="2dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Upload Image"
                android:layout_below="@+id/iv_uploadimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@id/tvUploadImage"
                android:layout_toRightOf="@+id/tvUploadImage"
                android:src="@drawable/uploadicon"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </RelativeLayout>

        <TextView
            android:textColor="@color/colorAccent"
            android:layout_margin="10dp"
            android:text="Gallary Image List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="5dp"
            android:id="@+id/rv_ImageList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>




    </LinearLayout>
    <ProgressBar
        android:id="@+id/progress_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="gone"></ProgressBar>
</RelativeLayout>