<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/cv_CertificateImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/app_icon" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tvtext"
            android:layout_below="@+id/cv_CertificateImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload certificate Image"
            android:textColor="@color/black" />




        <TextView
            android:id="@+id/teacher"
            android:layout_below="@+id/tvtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Select Contact Number."
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />


        <Spinner
            android:layout_below="@+id/teacher"
            android:id="@+id/sp_Select_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signup_background"
            android:cursorVisible="true"
            android:dropDownSelector="@color/black"
            android:focusable="true"
            android:focusedByDefault="true"
            android:maxLines="1"
            android:padding="10dp" />

        <TextView
            android:id="@+id/Tv_TQualification"
            android:layout_below="@+id/sp_Select_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Title"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />


        <EditText
            android:hint="Enter Title"
            android:id="@+id/et_Enter_Title"
            android:layout_below="@+id/Tv_TQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signup_background"
            android:dropDownSelector="@color/black"
            android:maxLines="1"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_below="@+id/et_Enter_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Message"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />


        <EditText
            android:hint="Type Your Message"
            android:layout_below="@+id/tv_number"
            android:id="@+id/et_Type_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/signup_background"
            android:maxLines="3"
            android:padding="10dp" />






        <LinearLayout
            android:layout_below="@+id/et_Type_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/bt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/batchlist_background"
                android:text="Cancel" />

            <Button
                android:id="@+id/bt_submitboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/batchlist_background"
                android:text="Submit" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>