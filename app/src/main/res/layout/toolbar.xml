<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_BackButtonToolbar"
            android:layout_width="35dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:padding="4dp"
            android:src="@drawable/arrow_back_white"
            app:tint="@color/black" />

        <androidx.appcompat.widget.Toolbar
            android:layout_marginStart="45dp"
            android:id="@+id/ToolbrMainscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">


            <LinearLayout
                android:id="@+id/ll_tb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rv_toolbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_bg">

                    <ImageView
                        android:id="@+id/ivLogoToolbar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:padding="6dp"
                        android:src="@drawable/search" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_toRightOf="@id/ivLogoToolbar"
                        android:background="@null"
                        android:clickable="false"
                        android:padding="8dp"
                        android:text="NeWay"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bellContainer"
                    android:layout_width="60dp"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                       />


                    <TextView
                        android:id="@+id/tv_NotificationCount"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="12dp"
                         android:gravity="center"
                        android:background="@drawable/round_corner"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:text="12"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/bellNotification"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerInParent="true"
                        android:padding="6dp"
                        android:src="@drawable/notification"
                        app:tint="@color/white" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvNotificationCount"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_notification"
                    android:gravity="center"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/ivNotificationDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_notification"
                    android:gravity="center"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


    </RelativeLayout>
</RelativeLayout>