<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardElevation="@dimen/margin_8_dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_margin="@dimen/text_20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Review"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20sp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:numStars="5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert your comments"
            android:textColor="@color/black"
            android:layout_margin="@dimen/margin_8_dp"/>
        <EditText
            android:paddingTop="@dimen/text_10sp"
            android:id="@+id/et_EnterReview"
            android:layout_margin="@dimen/text_10sp"
            android:layout_marginTop="@dimen/text_20sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="start"
            android:hint="Text......"
            android:paddingLeft="@dimen/text_20sp"
            android:background="@drawable/gray_background_corners"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_SubmitReview"
                android:layout_margin="30dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background_red"
                android:text="Submit"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_cancelReview"
                android:layout_margin="30dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background_white"
                android:text="Cancel"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>