<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:paddingLeft="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            app:cardCornerRadius="7dp"
            android:layout_gravity="center_vertical"
            android:layout_height="110dp">
            <ImageView
                android:id="@+id/iv_restaurant_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="fitXY"
                android:src="@drawable/pizza" />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <TextView

                android:fontFamily="@font/sans_regular"
                android:textColor="@color/red"
                android:layout_width="match_parent"

                android:id="@+id/tv_food_name"
                android:layout_height="wrap_content"
                android:text="Pizza" />
            <TextView
                android:id="@+id/tv_food_title"
                android:fontFamily="@font/sans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:text="Domino's Pizza"
                android:textColor="@color/black"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/offer_black" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="160dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/sans_regular"
                    android:text="40% off "
                    android:textColor="@color/red"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:layout_gravity="center"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/sans_regular"
                    android:text="32 mins" />


                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/clock" />


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sans_regular"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="250 for two" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_restaurantFamousAddress"
                    android:layout_width="match_parent"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sans_regular"
                    android:layout_height="wrap_content"
                    android:text="Address"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
