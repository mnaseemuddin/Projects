<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_AddressItems"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_toLeftOf="@id/llUpdateOrDelete"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tv_address_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:fontFamily="@font/sans_bold"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llUpdateOrDelete"
            android:layout_marginRight="@dimen/margin_24_dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <ImageView

                android:id="@+id/ivEditAddress"
                android:padding="@dimen/margin_8_dp"
                android:layout_marginRight="@dimen/margin_8_dp"
                android:src="@drawable/edit_black"
                android:layout_width="@dimen/margin_32_dp"
                android:layout_height="@dimen/margin_32_dp"/>

            <ImageView
                android:id="@+id/ivDeleteAddress"
                android:src="@drawable/delete_black"
                android:padding="@dimen/margin_8_dp"
                android:layout_width="@dimen/margin_32_dp"
                android:layout_height="@dimen/margin_32_dp"/>


        </LinearLayout>



    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_select_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:maxLines="4"
                    android:id="@+id/tv_full_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="H No 270," />




            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_address"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_marginRight="24dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey" />


</LinearLayout>
