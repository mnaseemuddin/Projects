<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        app:cardCornerRadius="5dp"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_TopBrandsItem"
            android:src="@drawable/girl"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_TopBrandProductName"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/sans_bold"
        android:textColor="@color/black"
        android:text="Vegeterian all time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_offer"
        android:layout_marginTop="@dimen/margin_4_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:padding="3dp"

            android:drawablePadding="@dimen/margin_8_dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/tv_productOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offer"
            android:background="@color/red"
            android:fontFamily="@font/sans_bold"
            android:textColor="@color/white"/>

    </LinearLayout>


</LinearLayout>