<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:id="@+id/frameLayoutProfile"
    android:fillViewport="true"
    android:focusable="true"
    tools:context=".Fragments.FragmentProfile">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <RelativeLayout
                android:id="@+id/RL_Head"
                android:background="@drawable/gradient_color"
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:textSize="23sp"
                    android:text="My Account"
                    android:fontFamily="@font/sans_bold"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:gravity="center"
                        android:textSize="17sp"
                        android:text="user name"
                        android:maxLines="1"
                        android:fontFamily="@font/sans_regular"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_user_email"
                        android:layout_marginTop="5dp"
                        android:gravity="center"

                        android:maxLines="1"
                        android:text="email"
                        android:fontFamily="@font/sans_regular"
                        android:textColor="@color/darker_grey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginTop="15dp"
                        android:background="@color/bg_gray"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"/>

                    <RelativeLayout
                        android:id="@+id/RL_Order_History"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_order_history"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/order"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"


                            android:maxLines="1"
                            android:text="Order History"
                            android:layout_toEndOf="@+id/iv_order_history"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RL_Manage_Address"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_Manage_Address"
                            android:tint="@color/red"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location_black_24dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"


                            android:maxLines="1"
                            android:text="Manage Address"
                            android:layout_toEndOf="@+id/iv_Manage_Address"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>




                    <RelativeLayout
                        android:id="@+id/RL_Edit_profile"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_profile"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"

                            android:maxLines="1"
                            android:text="Edit Profile"
                            android:layout_toEndOf="@+id/iv_profile"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RL_share"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_sahre"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_menu_share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"

                            android:maxLines="1"
                            android:text="Share"
                            android:layout_toEndOf="@+id/iv_sahre"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RL_Help"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_help"
                            android:layout_centerVertical="true"
                            android:src="@drawable/help"
                            android:tint="@color/red"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"

                            android:maxLines="1"
                            android:text="Help"
                            android:layout_toEndOf="@+id/iv_help"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RL_Privacy_policy"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_privacy"
                            android:layout_centerVertical="true"
                            android:src="@drawable/privacy"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:text="Privacy Policy"
                            android:layout_toEndOf="@+id/iv_privacy"
                            android:fontFamily="@font/sans_regular"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/darker_grey"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/RL_Logout"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_logout"
                            android:tint="@color/red"
                            android:layout_centerVertical="true"
                            android:src="@drawable/logout"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                        <TextView
                            android:paddingStart="10dp"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:text="Logout"
                            android:layout_toEndOf="@+id/iv_logout"
                            android:fontFamily="@font/sans_bold"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:rotation="180"
                            android:tint="@color/red"
                            android:src="@drawable/back_white_24dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/pbProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:id="@+id/iv_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/user" />
</RelativeLayout>

</FrameLayout>