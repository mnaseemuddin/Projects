<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView


        android:id="@+id/cardViewTrending_Horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"

      >

            <ImageView
                android:id="@+id/iv_Trending_Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="10dp"
                android:src="@drawable/burger" />



    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLatestFood_Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sans_regular"
                android:layout_alignParentLeft="true"
                android:text="Latest food"
                android:textColor="@color/black"
                android:textSize="12sp" />





            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar_Horizontal"
                android:layout_marginTop="4dp"
                android:layout_below="@id/tvLatestFood_Horizontal"
                android:layout_width="wrap_content"
                android:scaleX=".5"
                android:scaleY=".5"
                style="?android:attr/ratingBarStyleSmall"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                android:isIndicator="true"
                android:stepSize="0.1"
                android:max="5"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>