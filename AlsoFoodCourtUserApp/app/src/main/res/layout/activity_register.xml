<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    tools:context="com.lgt.also_food_court_userApp.Activities.RegisterActivity">

    <ImageView

        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_bg"
        android:orientation="vertical">


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <FrameLayout
                android:id="@+id/frame_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textAllCaps="true"
                        android:text="@string/launcher_title"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:fontFamily="@font/sans_bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textAllCaps="false"
                        android:text="@string/launcher_description"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/sans_regular" />






                </LinearLayout>

            </FrameLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <Button
            android:id="@+id/btnLogin"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:textAllCaps="false"

            android:background="@drawable/btn_background_red"
            android:text="Log In"
            android:fontFamily="@font/sans_bold"
            android:textColor="@color/white" />




        <Button

            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Sign Up"
            android:fontFamily="@font/sans_bold"
            android:textAllCaps="false"
            android:background="@drawable/btn_background_white"
            android:textColor="@color/red"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>

