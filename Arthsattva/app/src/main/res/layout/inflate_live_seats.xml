<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="3dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/iv_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/live_image1" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_live_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />



            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/transparent_gradient" />

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:fontFamily="@font/calibary_regular"
                android:text="Suzan Live"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:fontFamily="@font/calibary_regular"
                android:text="20"
                android:textColor="@color/white" />

        </FrameLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_seats"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:tint="@color/white"
        android:layout_gravity="center"
        android:src="@drawable/seat_icon"
        />
</androidx.cardview.widget.CardView>