<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >
               <FrameLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/timeline1"
                       android:scaleType="fitXY"/>
                   <LinearLayout
                       android:layout_margin="5dp"
                       android:layout_gravity="bottom"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:backgroundTint="@color/premium_color"
                           android:background="@drawable/circle_white"
                           android:src="@drawable/star_gif"
                           android:tint="@color/white"
                           />
                       <ImageView
                           android:layout_marginLeft="5dp"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/like"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="akehi"
                           android:textColor="@color/white"
                           android:fontFamily="@font/calibary_bold"
                           />
                   </LinearLayout>
                   <View

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@drawable/transparent_gradient"/>
               </FrameLayout>
               <FrameLayout
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   >
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/timeline2"
                       android:scaleType="fitXY"/>
                   <LinearLayout
                       android:layout_margin="5dp"
                       android:layout_gravity="bottom"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:backgroundTint="@color/blue2"
                           android:background="@drawable/circle_white"
                           android:src="@drawable/star_gif"
                           android:tint="@color/white"
                           />
                       <ImageView
                           android:layout_marginLeft="5dp"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/like"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="akehi"
                           android:textColor="@color/white"
                           android:fontFamily="@font/calibary_bold"
                           />
                       <ImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/like"
                           />
                   </LinearLayout>
                   <View

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@drawable/transparent_gradient"/>
               </FrameLayout>


           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:text="PK"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/rectangle_with_padding"
               android:textColor="@color/white"
               />

       </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_pk_type"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:text="0"
                android:background="@color/premium_color"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:text="0"
                android:background="@color/blue1"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>