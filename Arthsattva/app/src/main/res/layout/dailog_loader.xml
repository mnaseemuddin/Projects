<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- code created by RetryTech / Skype : RetryTech / Mail = gully@gmail.com -->
    <data>

    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_corner_10"
        android:backgroundTint="#A9000000"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp">

        <ImageView
            android:id="@+id/iv_parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bubble_single1"
            android:tint="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/iv_child"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/bubble_single_small1"
            android:tint="@color/colorPrimaryDark" />
        <TextView

            android:id="@+id/tv_percentage"
            android:layout_marginTop="20dp"
            android:text="0%"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>