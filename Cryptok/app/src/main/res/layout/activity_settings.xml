<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >


    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">


    <RelativeLayout

        android:id="@+id/rl_head"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/logindrawable"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:tint="@color/white" />

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_fun_in_buzo"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/calibary_regular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Fun in BUZO"/>
        </LinearLayout>
        
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_notifications"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/calibary_regular"

                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:text="Notifications"/>

                <com.github.angads25.toggle.widget.LabeledSwitch

                    android:id="@+id/labled_notification"
                    app:colorBorder="@color/low_app_color"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_privacy"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/calibary_regular"

                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:text="Privacy"/>

                <com.github.angads25.toggle.widget.LabeledSwitch

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_video_quality"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"

                android:fontFamily="@font/calibary_regular"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Video Quality"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_blocked_list"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"

                android:fontFamily="@font/calibary_regular"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Blocked List"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_connected_ac"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"

                android:fontFamily="@font/calibary_regular"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Connected Account"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_about_us"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:fontFamily="@font/calibary_regular"
                android:layout_height="50dp"

                android:textColor="@color/black"
                android:text="About Us"/>
        </LinearLayout> 
        <LinearLayout
            android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <TextView
            android:id="@+id/tv_help_translate"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:fontFamily="@font/calibary_regular"

            android:layout_height="50dp"
            android:textColor="@color/black"
            android:text="Help Us Translate"/>
    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_clean_cache"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/calibary_regular"

                android:textColor="@color/black"
                android:text="Clean Cache"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:id="@+id/tv_logout"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:fontFamily="@font/calibary_regular"

                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Log Out"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </LinearLayout>

</layout>