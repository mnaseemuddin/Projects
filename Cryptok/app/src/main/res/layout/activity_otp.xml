<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">


    <RelativeLayout
        android:id="@+id/Rl_Header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/logindrawable">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/calibary_bold"
            android:gravity="center"
            android:text="Verification"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"

            android:layout_marginLeft="10dp"
            android:rotation="180"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/white" />
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Rl_Header"
        android:fillViewport="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/otp" />


            <TextView
                android:id="@+id/tv_enter_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/calibary_bold"
                android:gravity="center"
                android:text="Enter the verification code"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/LL_Otp_Fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_one"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_two"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_three"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_four"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_five"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_six"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/otp_et"
                    android:digits="0123456789"
                    android:fontFamily="@font/calibary_regular"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp">

                <TextView
                    android:id="@+id/tv_verify"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:background="@drawable/btn_design"
                    android:fontFamily="@font/calibary_bold"
                    android:gravity="center"
                    android:text="Verify"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <ProgressBar
                    android:id="@+id/bt_login_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_OtpTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/calibary_regular"
                android:gravity="center_horizontal"
                android:text="Didn't receive the OTP? Request for a new one in"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_resend_code"
                android:layout_width="wrap_content"

                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_design"
                android:gravity="center"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Resend Code"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>