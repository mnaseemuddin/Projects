<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        layout="@layout/activity_mainheader"
        android:id="@+id/head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"


                android:layout_marginTop="10dp">

                <TextView
                    android:layout_marginStart="10dp"
                    android:text="general"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:textColor="@color/sixtwo"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"

                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/userr"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_EditName"
                    android:hint="Name"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColorHint="#626262"
                    android:layout_centerHorizontal="true"

                    android:background="@android:color/transparent"
                    android:padding="12dp" />
            </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/emaill"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditEmail"
                            android:hint="Email"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/mobile"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditMobile"
                            android:hint="Mobile Number"
                            android:singleLine="true"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dob"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditDob"
                            android:hint="Dob"
                            android:focusable="false"
                            android:editable="false"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Male"
                        android:id="@+id/tv_EditMale"
                        android:layout_weight="1"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/white"
                        android:background="@drawable/white_rectangle"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Female"
                        android:id="@+id/tv_EditFeMale"
                        android:paddingBottom="10dp"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:background="@drawable/white_rectangle"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_marginStart="10dp"
                    android:text="Privacy"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:textColor="@color/sixtwo"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>



                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/address"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditAddress"
                            android:hint="Address"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/city"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditCity"
                            android:hint="City"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/pincode"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditPincode"
                            android:hint="Pincode"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/state"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditState"
                            android:hint="State"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
                <View
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>

                <LinearLayout
                    android:background="@color/bg_gray"
                    android:paddingStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/country"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_EditCountry"
                            android:hint="Country"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColorHint="#626262"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <View

                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_EditFavouriteTeam"
                android:hint="Add Your Favourite Team"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColorHint="#626262"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_back"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textAllCaps="true"
            android:id="@+id/tv_EditUpdateProfile"
            android:padding="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gredient_bt"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"/>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
