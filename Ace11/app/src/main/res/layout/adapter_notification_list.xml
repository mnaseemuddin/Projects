<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/white_rectangle"
        android:elevation="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#1e1e1e"
                android:textStyle="bold"
                android:id="@+id/tv_NotificationTitle"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_NotificationTitle"
                android:layout_below="@+id/tv_NotificationTitle"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=""

                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textColor="#000"
                android:textSize="11sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_NotificationTitle"
                android:layout_below="@+id/tv_NotificationTitle"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/eightE"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_NotificationContest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_NotificationTitle"
                android:layout_below="@+id/tv_NotificationTitle"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Contest"
                android:layout_marginLeft="10dp"
                android:textColor="@color/eightE"
                android:textSize="11sp" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>