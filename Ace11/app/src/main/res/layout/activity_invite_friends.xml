<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lgt.Ace11.InviteFriendsActivity">
    <include
        layout="@layout/activity_mainheader"
        android:id="@+id/head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_marginTop="10dp"

            android:orientation="vertical"
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView

            android:visibility="gone"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start your friendâ€™s journey!"
            android:layout_gravity="center"
            />
            <TextView
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHARE YOUR INVITE CODE"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15dp"
                    android:gravity="end"
                    android:paddingEnd="20dp"
                    android:text="How It works"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <View

                    android:background="@color/gray"
                    android:layout_width="0.7dp"
                    android:layout_height="22dp"/>

                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"

                    android:paddingStart="20dp"
                    android:text="Rules of Invite"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/start"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/add_cash_black"
        android:elevation="5dp"
        android:id="@+id/LL_InviteFriendsCode"
        android:orientation="vertical"
        >




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv_UniqueCode"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INVITE YOUR FRIEND"
        android:padding="10dp"
        android:id="@+id/tv_InviteFriend"
        android:background="@drawable/gredient_bt"
        android:textColor="@color/white"

        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    </LinearLayout>

        <LinearLayout
            android:background="@drawable/gradiet_background"
            android:layout_below="@+id/LL_InviteFriendsCode"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView

                android:padding="5dp"

                android:tint="@color/white"
                android:layout_gravity="center_vertical"
                android:src="@drawable/refer"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YOUR INVITED FRIENDS"

android:layout_gravity="center_vertical"
                android:drawableTint="@color/white"
                android:id="@+id/tv_MyFriendList"
android:paddingStart="10dp"

                android:textColor="@color/white"

                android:drawableRight="@drawable/arrow_icon_mr"


                />

        </LinearLayout>


    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
