<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ll_headContainer"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">


            <TextView
                style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:id="@+id/tv_matchName"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/mgm_odisha_t20" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_btn_bg_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_matchName1"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Odisha Tigers"
                android:textAlignment="viewStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_matchName2"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Odisha Pumas"
                android:textAlignment="viewEnd"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_matchImage1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/black"
                android:src="@drawable/odisha_tigers" />

            <TextView
                android:id="@+id/tv_matchNameSort1"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text=" ODT"
                android:textAlignment="viewStart"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_statusResult"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="completed"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/selected_circle"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_matchNameSort2"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="OPU"
                android:textAlignment="viewEnd"
                android:textSize="13sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_matchImage2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_width="0.5dp"
                app:civ_border_color="@color/black"
                android:src="@drawable/odisha_tigers" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_matchTitleName"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:text="1 TEAM"
                android:textAlignment="viewStart"
                android:textSize="13sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>