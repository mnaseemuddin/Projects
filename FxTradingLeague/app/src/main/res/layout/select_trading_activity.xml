<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_toolbar"
        layout="@layout/toolbar" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_toolbar"
        android:elevation="10dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SELECT 10 COMPANIES"
                        android:textAlignment="textStart"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_totalSelectedStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 11"
                            android:textAlignment="textStart"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MONEY LEFT"
                        android:textAlignment="textEnd"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_targetMoneyWeHave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 11,00,000.00"
                        android:textAlignment="textEnd" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_teamSelectProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:min="0"
                    android:max="11"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_progress_bar"
                    android:secondaryProgress="0" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_barContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_3"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_4"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_5"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_6"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_7"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"

                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_8"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_9"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_10"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color" />

                <View
                    android:id="@+id/v_11"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/ptl_color"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_progressDotedBar"
                    android:layout_width="match_parent"
                    android:layout_height="17dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/search_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_headerContainer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pick 11 Stocks worth $1,00,000 each" />


            <TextView
                android:id="@+id/tv_previewData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_right"
                android:text="Preview    "
                android:textAlignment="textEnd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/corner_background"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/et_searchCoinName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Search"
                android:paddingLeft="10dp"
                android:textColor="@color/gray" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_company_trader_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RL_BottomBtnContainer"
        android:layout_below="@+id/search_item_container"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:id="@+id/RL_BottomBtnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/addStockTeamBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/joinbutton_back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="13dp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_priceProgress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress"
        android:progressDrawable="@drawable/progress"
        android:visibility="gone" />

</RelativeLayout>