<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount.UploadKYCActivity">

    <include
        layout="@layout/activity_mainheader"
        android:id="@+id/head"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY YOU PAN"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_VerifyHead"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_UploadDoc"
            android:layout_below="@+id/tv_VerifyHead"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/im_ImagePreview"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textSize="11sp"
            android:textAllCaps="true"
            android:id="@+id/tv_Upload"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:background="@drawable/gredient_bt"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL_UploadDoc"
            android:layout_marginTop="10dp"

            android:orientation="vertical">

            <View
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>
            <LinearLayout
                android:background="@color/bg_gray"

                android:paddingStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/userr"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_DocName"
                        android:hint="Enter Name"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View

                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>

            <LinearLayout
                android:background="@color/bg_gray"


                android:paddingStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pancard"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:hintEnabled="false"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_DocNumber"
                        android:hint="Enter PAN Number"
                        android:singleLine="true"

                        android:textSize="14sp"
                        android:padding="12dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"


                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View

                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>

            <LinearLayout
                android:background="@color/bg_gray"

                android:paddingStart="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/dob"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:hintEnabled="false"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_DocDob"
                        android:hint="Date of Birth"
                        android:singleLine="true"

                        android:textSize="14sp"
                        android:focusable="false"
                        android:clickable="true"
                        android:editable="false"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View

                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>
            <LinearLayout
                android:background="@color/bg_gray"

                android:paddingStart="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView

                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/state"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:hintEnabled="false"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_DocState"
                        android:hint="Enter State"
                        android:singleLine="true"

                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:padding="12dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <View

                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/tv_SubmitForVerification"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gredient_bt"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
