<LinearLayout


    android:id="@+id/tttt"
    android:background="@drawable/fixturebg"
    android:orientation="vertical"

    android:layout_below="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@+id/vs"
            android:textSize="12dp"

            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="S"
            android:textStyle="italic"
            android:paddingTop="4dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_toLeftOf="@+id/vs"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="V"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="8dp"

            android:layout_marginStart="20dp"
            app:shape_circle_borderColor="@color/startcolor"
            app:shape_circle_borderWidth="1dp">

            <ImageView

                android:id="@+id/team1Image"

                android:scaleType="centerCrop"
                android:layout_width="55dp"
                android:layout_height="55dp" />
        </com.github.florent37.shapeofview.shapes.CircleView>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/circle"
            android:textColor="@color/black"
            android:text="TN"
            android:layout_marginStart="5dp"
            android:textAllCaps="true"
            android:id="@+id/team1Name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_toEndOf="@+id/team1Name"
            android:src="@drawable/vsimg"
            android:id="@+id/vss"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_toStartOf="@+id/team2Name"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="23dp"/>


        <TextView
            android:layout_marginEnd="5dp"

            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/circle2"
            android:textColor="@color/black"
            android:text="TN"
            android:id="@+id/team2Name"
            android:textAllCaps="true"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/team2Name"
            android:layout_marginTop="18dp"
            android:id="@+id/tv_CreateTeamTimer"
            android:text="Timer"
            android:textSize="11dp"

            android:drawablePadding="5dp"


            android:textColor="@color/endcolor" />


        <com.github.florent37.shapeofview.shapes.CircleView
            android:id="@+id/circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="8dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            app:shape_circle_borderColor="@color/startcolor"
            app:shape_circle_borderWidth="1dp">

            <ImageView


                android:id="@+id/team2Image"
                android:scaleType="centerCrop"
                android:layout_width="55dp"
                android:layout_height="55dp" />

        </com.github.florent37.shapeofview.shapes.CircleView>
    </RelativeLayout>

</LinearLayout>
